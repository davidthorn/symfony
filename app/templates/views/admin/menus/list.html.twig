{% extends 'views/admin/base.html.twig' %}

{% block admin_content %}
    <h3>Menus</h3>
    <table class="table mt-3">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Title</th>
            <th scope="col">Parent</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        {% for index, menu in menus %}
            <tr>
                <th scope="row">{{ menu.id }}</th>
                <td>{{ menu.name }}</td>
                <td>{{ menu.title }}</td>
                <td>{{ menu.parent ?? 'None' }}</td>
                <td>
                    <span>
                        <a href="{{ edit_links[index] }}" title="{{ menu.title }}">Edit</a>
                    </span>
                    <span>
                        <form name="delete_form" method="post" action="{{ delete_links[index] }}">
                            <input type="hidden" name="_method" value="DELETE"/>
                            <button type="submit">Delete</button>
                        </form>

                    </span>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}