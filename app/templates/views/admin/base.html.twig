{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="/wd_admin/css/layout.css" rel="stylesheet"/>
{% endblock %}

{% block end_javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/wd_admin/js/script.js"></script>
{% endblock %}

{% block title %}Admin{% endblock %}

{% block admin_title %}Admin{% endblock %}

{% block content %}
    <div class="container-fluid">
        <div class="row">
            <div class="col p-0">
                {% block sidebar %}
                {{ render(controller(
                    'App\\Controller\\Admin\\Core\\Menu\\MainMenuController::indexAction', { menuType: 'main' })) }}
                {% endblock %}
            </div>
            <div class="col-10 p-0">
                <nav class="navbar my-navbar navbar-expand-lg navbar-light bg-light border-bottom">
                    <div class="container-fluid">
                        <button class="navbar-toggler"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent"
                                aria-expanded="false"
                                aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            {% include 'includes/admin/dropdown.html.twig' %}
                        </div>
                    </div>
                </nav>

                <div class="container-fluid pt-4 px-4">
                    {% block admin_content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>


{% endblock %}